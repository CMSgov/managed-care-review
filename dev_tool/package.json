{
    "name": "dev_tool",
    "type": "module",
    "version": "1.0.0",
    "description": "local dev tooling",
    "main": "index.js",
    "private": true,
    "license": "MIT",
    "scripts": {
        "precommit": "lint-staged",
        "lint": "tsc --noEmit && eslint src/",
        "clean": "rm -rf node_modules && yarn cache clean",
        "format": "prettier --write src/**/*.ts{,x}",
        "build": "tsc"
    },
    "lint-staged": {
        "dev_tool/src/**/*.{js,ts}": [
            "eslint --fix",
            "prettier --write src/**/*.ts{,x}"
        ]
    },
    "dependencies": {
        "yargs": "^17.2.1"
    },
    "devDependencies": {
        "typescript": "^4.4.4"
    }
}
