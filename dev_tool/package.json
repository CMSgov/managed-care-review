{
    "name": "dev_tool",
    "type": "module",
    "version": "1.0.0",
    "description": "local dev tooling",
    "main": "index.js",
    "private": true,
    "license": "MIT",
    "scripts": {
        "precommit": "lint-staged",
        "lint": "tsc --noEmit && eslint --max-warnings=0",
        "build": "tsc",
        "build:dev": "tsc",
        "prettier": "npx prettier -u --write \"**/*.+(ts|tsx|json)\""
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix --max-warnings=0",
            "prettier --write src/**/*.ts{,x}"
        ]
    },
    "dependencies": {
        "@aws-sdk/client-cloudfront": "^3.699.0",
        "@aws-sdk/client-ec2": "^3.708.0",
        "@aws-sdk/client-secrets-manager": "^3.699.0",
        "node-ssh": "^13.1.0",
        "yargs": "^17.2.1",
        "axios": "^1.7.9"
    },
    "devDependencies": {
        "@types/ssh2": "^1.11.15",
        "@types/yargs": "^17.0.33",
        "@types/node": "^20.14.12",
        "lint-staged": "^15.2.7",
        "typescript": "^4.4.4"
    }
}
