{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2021", "DOM"],
        "target": "es2021",
        "moduleResolution": "node",
        "baseUrl": "/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src", "jest.config.ts"]
}
