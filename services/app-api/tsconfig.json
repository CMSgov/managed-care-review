{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "Node16",
        "lib": ["es2021", "DOM"],
        "target": "es2021",
        "moduleResolution": "node",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src"]
}
