{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "ES2022",
        "lib": ["ES2022", "DOM"],
        "target": "ES2022",
        "moduleResolution": "node",
        "baseUrl": "/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src", "jest.config.ts"]
}
