{
    "extends": "../tsconfig.shared.json",
    "compilerOptions": {
        "baseUrl": "/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es2020",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "esnext",
        "lib": ["esnext"]
    }
}
