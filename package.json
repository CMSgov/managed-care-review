{
    "name": "managed-care-review",
    "type": "module",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "private": true,
    "workspaces": {
        "packages": [
            "services/*",
            "dev_tool",
            "scripts"
        ]
    },
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "clean": "lerna clean",
        "test": "lerna run test",
        "appwebtest": "sh ./app_web_test.sh",
        "appapitest": "sh ./app_api_test.sh",
        "lint": "lerna run lint --parallel",
        "format": "yarn prettier --write",
        "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|json)\"",
        "cypress:open": "cypress open --env AUTH_MODE=LOCAL",
        "cypress:run": "rm -rf .nyc_output && ./node_modules/.bin/cypress run --env AUTH_MODE=LOCAL --headless --browser chrome",
        "test:coverage": "yarn run appwebtest && yarn run appapitest && yarn run cypress:run",
        "pretest:coverage": "rm -rf .nyc_output",
        "posttest:coverage": "yarn run report:combined",
        "mkdir:reports": "mkdir -p reports",
        "precopy:reports": "yarn run mkdir:reports",
        "copy:reports": "cp ./coverage-cypress/coverage-final.json ./reports/from-cypress.json && cp ./services/app-web/coverage/coverage-final.json ./reports/from-jest.json && cp ./services/app-api/coverage/coverage-final.json ./reports/from-api.json",
        "precombine:reports": "yarn run copy:reports && mkdir -p .nyc_output",
        "combine:reports": "npx nyc merge reports && mv coverage.json .nyc_output/out.json",
        "prereport:combined": "yarn run combine:reports",
        "report:combined": "mkdir -p coverage-all && npx nyc report --reporter lcov --reporter text --reporter json-summary --report-dir coverage-all"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CMSgov/managed-care-review.git"
    },
    "nyc": {
        "report-dir": "coverage-cypress",
        "exclude": [
            "/*.stories.tsx",
            "**/src/s3",
            "**/src/api",
            "**/src/constants",
            "**/src/testHelpers",
            "**/src/localAuth",
            "**/src/gen",
            "**/src/contexts/TraceContext.tsx",
            "**/src/hooks/useTealium.ts",
            "**/src/parameterStore/awsParameterStore.ts",
            "**/src/components/Header/StateIcon/StateIcon.tsx",
            "**/src/pages/Auth/CheckAuth.tsx",
            "**/src/pages/Auth/CognitoLogin.tsx",
            "**/src/pages/Auth/Signup",
            "**/src/pages/Auth/ConfirmSignUp",
            "**/src/pages/Help/Help.tsx",
            "**/App.tsx",
            "**/index.ts",
            "**/reportWebVitals.ts"
        ]
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "/*.stories.tsx",
            "src/s3",
            "src/api",
            "src/testHelpers",
            "src/localAuth",
            "src/gen",
            "src/components/Header/StateIcon/StateIcon.tsx",
            "src/pages/Auth/CheckAuth.tsx",
            "src/pages/Auth/CognitoLogin.tsx",
            "src/pages/Auth/Signup",
            "src/pages/Auth/ConfirmSignUp",
            "src/pages/Help/Help.tsx",
            "App.tsx",
            "index.ts",
            "reportWebVitals.ts"
        ],
        "coverageReporters": [
            [
                "json",
                {
                    "projectRoot": "../../"
                }
            ],
            [
                "lcov",
                {
                    "projectRoot": "../../"
                }
            ],
            "text"
        ]
    },
    "author": "",
    "license": "CC0-1.0",
    "bugs": {
        "url": "https://github.com/CMSgov/managed-care-review/issues"
    },
    "homepage": "https://github.com/CMSgov/managed-care-review#readme",
    "devDependencies": {
        "@cypress-audit/pa11y": "^1.3.0",
        "chromedriver": "^106.0.1",
        "cypress": "^10.4.0",
        "cypress-pipe": "^2.0.0",
        "husky": "^8.0.1",
        "lerna": "^4.0.0",
        "lint-staged": "^13.0.1",
        "prettier": "^2.4.1"
    },
    "dependencies": {
        "cypress-file-upload": "^5.0.8",
        "path-browserify": "^1.0.1"
    }
}
